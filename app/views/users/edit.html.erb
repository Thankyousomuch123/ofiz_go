<h1>Edit User</h1>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %>
  </div>
  <br>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :role_id %>
    <%= f.collection_select(:role_id, Role.all, :id, :name) %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Update User', class: "btn btn-primary"  %>
  </div>
<% end %>
